# Environment Variables Template
# Copy this file to .env and fill in your values

# Django Settings
# IMPORTANT: Generate a new SECRET_KEY for production!
# Run: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# Example generated key (DO NOT USE THIS - generate your own):
SECRET_KEY=your-secret-key-here-change-this-in-production-use-command-above
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (for PostgreSQL deployment)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Email (optional - for notifications)
# To enable real email sending:
# 1. Set EMAIL_ENABLE_SMTP=true
# 2. Configure Gmail SMTP credentials below:
#    - Enable 2-factor authentication on Gmail
#    - Create App Password: https://myaccount.google.com/apppasswords
#    - Use the 16-character app password below

EMAIL_ENABLE_SMTP=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-16-chars
DEFAULT_FROM_EMAIL=noreply@tedxfinancehub.com

# File Storage (optional - for cloud storage)
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# AWS_STORAGE_BUCKET_NAME=your-bucket
